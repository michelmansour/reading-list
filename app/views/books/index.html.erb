<h1>Listing books</h1>

<%= link_to 'Add book', new_book_path %>

<table>
    <tr>
        <th>Title</th>
        <th>Text</th>
    </tr>

    <% @books.each do |book| %>
    <tr>
        <td><%= book.title %></td>
        <td><%= book.review %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destory', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
</table>
